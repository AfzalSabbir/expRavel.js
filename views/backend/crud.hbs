<div class="form-row mb-5">
  <div class="col-md-3">
    <div class="card alert-info">
      <div class="card-header">Post</div>
      <div class="card-body">
        <form id="form" action="{{route 'admin_submit'}}" method="POST">
          <div class="form-group">
            <label for="">Title</label>
            <input type="text" class="form-control" name="title" autofocus="" required="required">
          </div>
          <div class="form-group">
            <label for="">Author</label>
            <input type="text" class="form-control" name="author" autofocus="" required="required">
          </div>
          <div class="form-group">
            <label for="">Edition</label>
            <input type="text" class="form-control" name="edition" autofocus="" required="required">
          </div>
          <button type="submit" class="btn btn-success my-1">Send</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card h-100 alert-success">
      <div class="card-header">Get</div>
      <div class="card-body"></div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card h-100 alert-warning">
      <div class="card-header">Put</div>
      <div class="card-body"></div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card h-100 alert-danger">
      <div class="card-header">Delete</div>
      <div class="card-body"></div>
    </div>
  </div>
</div>
<hr>
<div class="row mt-5">
  <div class="col-md-6 mx-auto">
    <form id="form" class="my-3 d-flex" action="{{route 'admin_submit'}}" method="POST">
      <input type="text" class="form-control rounded-0 rounded-left" name="id" autofocus="" required="required">
      <button type="submit" class="btn btn-success rounded-0 rounded-right">Save</button>
    </form>
  </div>
</div>
{{#if showForm}}
  <div class="form-row">
    {{#each arr as |alias key|}}
    <div class="col-md-2 my-1">
      <div class="card">
        <div class="card-header">{{ add key 1 }}. {{alias}} <a href="/admin/delete/{{ key }}" class="close text-danger"> &times;</a></div>
      </div>
    </div>
    {{/each}}
  </div>
{{/if}}

